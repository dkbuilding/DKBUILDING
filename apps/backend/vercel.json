{
  "version": 2,
  "buildCommand": "cd apps/backend && pnpm install && pnpm run build",
  "builds": [
    {
      "src": "apps/backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/backend/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
