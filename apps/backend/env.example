# Configuration pour DK BUILDING API

# Port du serveur backend
PORT=3001

# Port du serveur frontend (pour référence)
FRONTEND_PORT=5173

# URL du frontend (pour CORS)
FRONTEND_URL=http://localhost:5173

# URL de base de l'API
API_BASE_URL=http://localhost:3001

# Configuration Resend pour l'envoi d'emails
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@dkbuilding.fr

# Email de contact pour recevoir les demandes
CONTACT_EMAIL=contact@dkbuilding.fr

# Configuration de production
NODE_ENV=development

# Logs
LOG_LEVEL=info

# Configuration LockAccess System
LOCKACCESS=true
LOCKACCESS_LOCKED=false
LOCKACCESS_MAINTENANCE_MODE=false
LOCKACCESS_ALLOWED_IPS=127.0.0.1,::1
LOCKACCESS_BLOCKED_IPS=
